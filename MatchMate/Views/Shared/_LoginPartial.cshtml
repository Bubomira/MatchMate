@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        if (!User.IsInRole("Administrator"))
        {
        <li class="nav-item">
            <a  class="nav-link text-dark" asp-controller="User" asp-action="Profile">My profile</a>
         </li>          
        }
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
     <li class="nav-item">
        <a class="nav-link text-dark"  asp-controller="Authentication" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Login">Login</a>
    </li>
}
</ul>
