@model ReportedOfferModel

<div class="card">
    <section class="card-header">
        <h5>@Model.Title</h5>
    </section>
    <section class="list-group list-group-flush">
        <li class="list-group-item">@Model.ReasonForReport</li>
        <li class="list-group-item">
            <a class="btn btn-warning" asp-controller="ReportedOffers" asp-action="Details" asp-route-id="@Model.Id">See more</a>
        </li>
    </section>
</div>