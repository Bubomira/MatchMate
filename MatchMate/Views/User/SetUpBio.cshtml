@model UserBioModel

<div class="modal fade" id="bioModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
           <h5 class="mt-3 text-center">You have to set up your account in order to experience Match mate to the fullest!</h5>
      </div>
       <div class="modal-body">
           <p class="text-center">Now you have to set up your bio!</p>
           <form  method="post">
               <div class="modal-body">
                   <textarea class="form-control" rows="2" asp-for="@Model.Bio"></textarea> 
                   <span asp-validation-for="@Model.Bio" class="text-danger"></span>
               </div>
               <div class="modal-footer">
                    <input asp-controller="User" asp-action="SetUpBio" type="submit" class="btn btn-primary mt-2 pb-2"  value="I'm ready"/>
               </div>
           </form>
      </div>
    </div>
  </div>
</div>

 @section Scripts{
     <partial name="_ValidationScriptsPartial"/>
 }
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
   $(window).on('load', function() {
    $('#bioModal').modal('show');
   });
</script>