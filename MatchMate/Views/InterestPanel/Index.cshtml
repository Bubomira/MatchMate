@model InterestPanelList

<section class="gap-3  d-flex justify-content-center align-items-center">
   <h2 class="text-center ">Here are all interests!</h2>
   <a asp-action="Add" asp-controller="InterestPanel" class="btn btn-primary">Add</a>
</section>
<h5 class="text-center mb-5">Total count: @Model.TotalInterestsCount</h5>

<div class="d-flex flex-wrap gap-3">
    @foreach (var interest in Model.Interests)
    {
      <partial name="InterestPanelCardPartial" model="@interest"/>
    }
</div>

 <section class="pagination d-flex justify-content-center gap-3 mt-5">
               <a class="@(Model.CurrentPage==1? "disabled ":string.Empty) page-link btn" 
                  asp-action="Index" 
                  asp-controller="InterestPanel"
                  asp-route-pageNumber ="@Model.PreviousPage"
                  aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
               </a>
               <a class="@(Model.CurrentPage==Model.TotalPagesCount? "disabled ":string.Empty)page-link btn"
                  asp-action="Index" 
                  asp-controller="InterestPanel"
                  asp-route-pageNumber ="@Model.NextPage"
                  aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
               </a>
</section>